import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc=new Scanner(System.in);
        int size=sc.nextInt();
        int arr[]=new int[size];
        int pos=0;
        int neg=0;
        for(int i=0;i<size;i++)
        {
            int number=sc.nextInt();
            if(number>0)
            {
                pos++;
            }
            else if(number<0){
                 neg++;   
            }                 
        }
             System.out.printf("Count of Positive Integer is %.2f\n",(double)pos); 
             System.out.printf("Count of Negative Integer is %.2f",(double)neg); 
                    
    }
}
